{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug via NPM",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "NO_COLOR": "1"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bhttp://localhost:([0-9]+)\\b",
            }
        }
    ]
}